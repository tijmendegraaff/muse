<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h2><%= @post.title %></h2>
      <p><%= @post.link %></p>
      <p><%= @post.description %></p>
      <%= cl_image_tag @post.photo, height: 300, width: 400, crop: :fill %>
      <p><%= @post.user.name %></p>
      <p><%= @post.get_upvotes.size %> Likes</p>
      <p><%= @post.get_downvotes.size %> Dislikes</p>
      <%= link_to "like", like_post_path(@post), method: :get %>
      <%= link_to "dislike", dislike_post_path(@post), method: :get %>


      <h2><%= pluralize(@post.comments.count, "Comment") %></h2>
      <% @comments.each do |comment| %>
        <%= comment.user.name %>
        <%= comment.content %>
      <% end %>
      <%= render '/comments/form' %>

      <%= link_to 'Edit', edit_post_path(@post) %>
      <%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure?" } %>
      <%= link_to 'Back', posts_path %>
    </div>
  </div>
</div>
